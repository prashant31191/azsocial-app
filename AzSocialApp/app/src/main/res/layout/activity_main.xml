<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_theme"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:alpha="0.2"
            ></RelativeLayout>



       <!-- <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adViewTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/m_50dp"
            android:layout_centerHorizontal="true"
            android:alpha="0.4"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-4346653435295459/4925872012">
        </com.google.android.gms.ads.AdView>-->




        <!--ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5194219019183767/2052076832"-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

            app:titleTextColor="@color/black">

        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignBottom="@+id/toolbar"
            android:background="@color/clrTrBlue20" />


    </RelativeLayout>


    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">


    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">



        <android.support.design.widget.TabLayout
            android:id="@+id/bottom_tab_layout"
            style="@style/BottomTabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_blue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignTop="@+id/bottom_tab_layout"
            android:background="@color/clrTrBlue20" />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignBottom="@+id/bottom_tab_layout"
            android:background="@color/clrTrBlue20" />

    </RelativeLayout>

</LinearLayout>
